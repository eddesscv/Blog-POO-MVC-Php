{% extends 'base.html.twig' %}
{% block title %}Connexion
{% endblock %}
{% block content %}
	{% if session.get('error_login') %}
		<div class="alert alert-warning"> {{ session.show('error_login') }}
		</div>
	{% endif %}
	{% if session.get('error_compte_inactif') %}
		<div class="alert alert-danger"> {{ session.show('error_compte_inactif') }}
		</div>
	{% endif %}
	<div>
		<form method="post" action="../public/index.php?url=login">
			<div class="form-group">
				<label for="pseudo">Pseudo</label><br>
				<input class="form-control" type="text" id="pseudo" name="pseudo" value="{% if post %}{{ post.pseudo }}{% endif %}"><br>
			</div>
			<div class="form-group">
				<label for="password">Mot de passe</label><br>
				<input class="form-control" type="password" id="password" name="password"><br>
			</div>
			<input class="btn btn-secondary" type="submit" value="Connexion" id="submit" name="submit">
		</form>
		<hr>
		<p class="text-center">
			<a class="btn btn-secondary" href="../public/index.php">Retour Ã  l'accueil</a>
		</p>
	</div>
{% endblock %}
