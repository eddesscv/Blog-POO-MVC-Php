{% extends 'base.html.twig' %}
{% block title %}Inscription{% endblock %}
{% block content %}
<div>
    <form method="post" action="../public/index.php?url=register">
        <label for="pseudo">Pseudo</label><br>
        <input type="text" id="pseudo" name="pseudo" value="{% if post %}{{ post.get('pseudo') }}{% endif %}"><br>
        {% if errors.pseudo %}{{ errors.pseudo }}{% endif %}
        <label for="password">Mot de passe</label><br>
        <input type="password" id="password" name="password"><br>
        {% if errors.password %}{{ errors.password }}{% endif %}
        <input type="submit" value="Inscription" id="submit" name="submit">
    </form>
    <a href="../public/index.php">Retour Ã  l'accueil</a>
</div>
{% endblock %}