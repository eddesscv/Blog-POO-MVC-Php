
{% extends 'base.html.twig' %}
{% block title %}Modifier mot mot de passe{% endblock %}
{% block content %}
<div>
    <p>Le mot de passe de {{ session.get('pseudo') }} sera modifié</p>
    <form method="post" action="../public/index.php?url=updatePassword">
        <label for="password">Mot de passe</label><br>
        <input type="password" id="password" name="password"><br>
        <input type="submit" value="Mettre à jour" id="submit" name="submit">
    </form>
</div>
<br>
<a class="btn btn-secondary" href="../public/index.php">Retour à l'accueil</a>
{% endblock %}